{
    "name": "usefulness-api-zf3",
    "description": "An Usefulness API using Zend Framework 3.0",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "framework",
        "mvc",
        "zf",
        "usefulness",
        "API"
    ],
    "authors": [
        {
            "name": "ReÃÅmi THOMAS",
            "email": "remi.thomas@dash2dots.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "zendframework/zend-mvc": "^3.0.1",
        "zfcampus/zf-development-mode": "^3.0",
        "zendframework/zend-json": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "module/Application/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "module/Application/test/"
        }
    },
    "extra": [],
    "scripts": {
        "cs-check": "./vendor/bin/phpcs",
        "cs-fix": "./vendor/bin/phpcbf",
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "./vendor/bin/phpunit --colors=always",
        "test-coverage": "./vendor/bin/phpunit --colors=always --coverage-clover clover.xml"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "^6.4",
        "zendframework/zend-test": "^3.1",
        "php-coveralls/php-coveralls": "^1.0"
    }
}
